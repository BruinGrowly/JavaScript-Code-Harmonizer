{
  "name": "javascript-code-harmonizer",
  "version": "0.2.0",
  "description": "A TypeScript-based code harmonizer using LJPW (Love-Justice-Power-Wisdom) semantic framework for semantic bug detection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "harmonizer": "dist/cli/harmonizer.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "example": "tsc && node dist/examples/basic-usage.js",
    "example:ts": "ts-node examples/basic-usage.ts",
    "harmonizer": "ts-node src/cli/harmonizer.ts",
    "cli": "tsc && node dist/cli/harmonizer.js"
  },
  "keywords": [
    "code-harmonizer",
    "levenshtein",
    "similarity",
    "code-analysis",
    "typescript",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/babel__traverse": "^7.20.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@babel/parser": "^7.23.6",
    "@babel/traverse": "^7.23.6",
    "@babel/types": "^7.23.6"
  }
}
